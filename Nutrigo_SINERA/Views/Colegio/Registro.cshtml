@model Nutrigo_SINERA.Models.ClsColegio
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div style="padding: 30px;">
    <h2 style="text-align:center; font-weight:bold;">Datos para el usuario con rol COLEGIO</h2>
    <br />
    @using (Html.BeginForm("Registro", "Colegio", FormMethod.Post))
    {
        <div class="row">
            <!-- Columna izquierda: Información institucional -->
            <div class="col-md-6">
                <h4>🏫 Información institucional</h4>

                <label>Nombre del colegio</label>
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre del colegio" })

                <label>Código Modular</label>
                @Html.TextBoxFor(m => m.CodigoModular, new { @class = "form-control" })

                <label>Tipo de colegio</label>
                @Html.TextBoxFor(m => m.TipoColegio, new { @class = "form-control" })

                <label>Nivel educativo</label>
                @Html.TextBoxFor(m => m.NivelEducativo, new { @class = "form-control" })

                <label>Dirección completa</label>
                @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control" })

                <label>Departamento / Provincia / Distrito</label>
                @Html.TextBoxFor(m => m.Ubicacion, new { @class = "form-control" })

                <label>Teléfono del colegio</label>
                @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })

                <label>Correo institucional</label>
                @Html.TextBoxFor(m => m.CorreoInstitucional, new { @class = "form-control" })

                <label>Cantidad de alumnos</label>
                @Html.TextBoxFor(m => m.CantidadAlumnos, new { @class = "form-control" })
            </div>

            <!-- Columna derecha: Representante -->
            <div class="col-md-6">
                <h4>✅ Datos del usuario responsable / representante</h4>

                <label>Nombres y apellidos</label>
                @Html.TextBoxFor(m => m.RepresentanteNombre, new { @class = "form-control" })

                <label>Cargo</label>
                @Html.TextBoxFor(m => m.RepresentanteCargo, new { @class = "form-control" })

                <label>DNI</label>
                @Html.TextBoxFor(m => m.RepresentanteDNI, new { @class = "form-control" })

                <label>Correo electrónico</label>
                @Html.TextBoxFor(m => m.RepresentanteCorreo, new { @class = "form-control" })

                <label>Número de celular</label>
                @Html.TextBoxFor(m => m.RepresentanteCelular, new { @class = "form-control" })

                <label>Contraseña de acceso al sistema</label>
                @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control" })

                <br />
                <input type="submit" value="Continuar y Pagar Suscripción" class="btn btn-success" style="width:100%;" />
            </div>
        </div>
    }
</div>