    Layout = "~/Views/Shared/LayoutProveedor.cshtml";
    ViewBag.Title = "Notificaciones";
}

<h2 class="mb-4 text-center">🔔 Notificaciones</h2>

<div class="mx-auto" style="max-width: 700px;">
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div>
                <strong>Nueva solicitud de menú</strong>
                <div class="small text-muted">Hace 2 horas</div>
