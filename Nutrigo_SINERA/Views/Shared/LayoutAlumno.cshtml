<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Panel del Alumno</title>
    <link href="~/source/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/source/js/jquery-3.7.1.min.js"></script>
    <script src="~/source/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar fijo del colegio -->
            <div class="col-md-2 bg-light" style="min-height: 100vh; padding: 20px;">
                <h4 class="fw-bold">Nutrigo</h4>
                <ul class="nav flex-column mt-4">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Alumno")">📊 Gráficas de progreso</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("RecomendacionesPersonalizadas", "Alumno")">📦 Recomendaciones Personalizadas IA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("EvaluacionHabitos", "Alumno")">📋 Evaluacion Habitos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MonitoreoIMC", "Alumno")">📈 Monitoreo de IMC</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("PlanSemanalSistema", "Alumno")">📅 Plan semanal del Sistema</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("PlanSemanalProveedores", "Alumno")">📅 Plan semanal de proveedores</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("EditarPerfil", "Alumno")">👤 Editar Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Notificaciones", "Alumno")">🔔 Notificaciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="@Url.Action("Index", "Home")">🚪 Cerrar Sesión</a>
                    </li>
                </ul>
            </div>

            <!-- Contenido -->
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
